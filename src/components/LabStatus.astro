---
const labUrl = "https://lab.你的域名.com";
---

<div id="lab-portal" class="absolute top-0 left-0 w-0 h-0 overflow-visible">
    <a href={labUrl} 
       target="_blank" 
       class="fixed bottom-10 right-10 z-[9999] flex items-center gap-3 p-3 px-4 rounded-2xl bg-black/60 backdrop-blur-xl border border-white/10 hover:border-[var(--primary)] transition-all duration-300 group shadow-2xl no-underline"
    >
        <div class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[var(--primary)] opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-[var(--primary)]"></span>
        </div>
        
        <div class="flex flex-col items-start leading-none pointer-events-none">
            <span class="text-[9px] text-white/40 tracking-widest font-bold mb-1 uppercase">Compute Node</span>
            <span class="text-sm font-medium text-white/90">混沌实验室</span>
        </div>

        <div class="ml-1 text-white/20 group-hover:text-[var(--primary)] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
        </div>
    </a>
</div>

<style>
    #lab-portal {
        --primary: var(--primary-color, #00ffcc);
    }
    /* 强制重置 A 标签在主题中的默认样式 */
    a { text-decoration: none !important; }
</style>